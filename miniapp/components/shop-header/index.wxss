/* 店铺页眉样式 - 简洁优雅 */
.shop-header {
  background: #fff;
  padding: 24rpx 28rpx;
  margin: -20rpx -20rpx 24rpx -20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.header-inner {
  display: flex;
  align-items: center;
}

/* Logo 容器 */
.logo-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #f8f9fa;
}

.logo-img {
  width: 100%;
  height: 100%;
}

/* 店铺信息 */
.shop-info {
  margin-left: 20rpx;
  flex: 1;
}

.shop-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: 1rpx;
  display: block;
  line-height: 1.3;
}

.shop-sub {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.dot {
  width: 10rpx;
  height: 10rpx;
  background: #ff6b35;
  border-radius: 50%;
  margin-right: 10rpx;
}

.shop-desc {
  font-size: 24rpx;
  color: #999;
  letter-spacing: 0.5rpx;
}
