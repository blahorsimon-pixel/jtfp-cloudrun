@import '/assets/styles/iconfont.wxss';

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(to top, #ffffff 0%, #fafafa 100%);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
  border-top: 1rpx solid rgba(0, 0, 0, 0.04);
  z-index: 999;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0 8rpx;
  position: relative;
  transition: all 0.3s ease;
}

.tab-bar-item:active {
  transform: scale(0.95);
}

.icon-wrapper {
  position: relative;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 6rpx;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.icon-wrapper.active {
  transform: scale(1.08) translateY(-2rpx);
}

.icon-bg {
  position: absolute;
  width: 0;
  height: 0;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.15) 0%, rgba(255, 107, 53, 0.08) 100%);
  border-radius: 50%;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  z-index: 0;
}

.icon-wrapper.active .icon-bg {
  width: 110%;
  height: 110%;
}

.iconfont {
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
}

.tab-text {
  font-size: 22rpx;
  line-height: 1.2;
  font-weight: 400;
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

.tab-text.active {
  font-weight: 600;
  transform: scale(1.05);
  letter-spacing: 0.8rpx;
}
