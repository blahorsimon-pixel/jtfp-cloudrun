<view class="tab-bar">
  <view
    class="tab-bar-item"
    wx:for="{{list}}"
    wx:key="index"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <view class="icon-wrapper {{selected === index ? 'active' : ''}}">
      <view class="icon-bg"></view>
      <view class="iconfont {{item.iconClass}}"></view>
    </view>
    <text class="tab-text {{selected === index ? 'active' : ''}}" style="color: {{selected === index ? selectedColor : color}}">{{item.text}}</text>
  </view>
</view>
