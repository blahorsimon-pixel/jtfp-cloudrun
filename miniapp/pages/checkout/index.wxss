.container {
  padding: 20rpx 20rpx 160rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 14rpx;
}

.address {
  border: 1rpx solid #fff3e8;
}

.addr-top {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.addr-name {
  font-size: 30rpx;
  color: #222;
  font-weight: 600;
}

.addr-phone {
  font-size: 26rpx;
  color: #666;
}

.addr-line {
  display: block;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #444;
  line-height: 1.6;
}

.addr-edit {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #ff6b35;
}

.addr-empty {
  color: #666;
}

.addr-empty-title {
  font-size: 28rpx;
  color: #333;
}

.item {
  display: flex;
  padding: 14rpx 0;
  border-top: 1rpx solid #f1f1f1;
}

.item:first-child {
  border-top: none;
}

.cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.info {
  flex: 1;
  margin-left: 14rpx;
  min-width: 0;
}

.title {
  font-size: 28rpx;
  color: #222;
  line-height: 1.4;
}

.sku {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #888;
}

.meta {
  margin-top: 10rpx;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.price {
  color: #ff6b35;
  font-size: 28rpx;
  font-weight: 700;
}

.qty {
  color: #666;
  font-size: 26rpx;
}

.sum-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}

.sum-label {
  color: #666;
  font-size: 26rpx;
}

.sum-value {
  color: #222;
  font-size: 26rpx;
}

.sum-row.hint .sum-value {
  color: #999;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 18rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.06);
}

.footer-left {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.total-label {
  color: #666;
  font-size: 26rpx;
}

.total-value {
  color: #ff6b35;
  font-size: 38rpx;
  font-weight: 800;
}

.btn-submit {
  background: #ff6b35;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 46rpx;
  border-radius: 14rpx;
}

/* 福利码订单信息卡片 */
.welfare-info-card {
  background: linear-gradient(135deg, #fff3e8 0%, #ffe8d8 100%);
  border: 2rpx solid #ffcfb8;
}

.welfare-tag-row {
  display: flex;
  align-items: center;
  justify-content: center;
}

.welfare-code-tag {
  background: #ff6b35;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
}

.welfare-note-row {
  margin-top: 16rpx;
  padding: 12rpx 16rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 8rpx;
  display: flex;
  align-items: flex-start;
}

.welfare-note-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  flex-shrink: 0;
}

.welfare-note-text {
  color: #fff;
  font-size: 24rpx;
  word-break: break-all;
}
