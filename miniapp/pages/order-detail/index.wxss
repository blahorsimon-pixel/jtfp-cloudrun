.container {
  padding: 20rpx 20rpx 160rpx;
}

.loading,
.error {
  padding: 120rpx 0;
  text-align: center;
  color: #999;
}

.btn-retry {
  margin-top: 20rpx;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  background: #ff6b35;
  color: #fff;
  border-radius: 40rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}

.label {
  color: #666;
  font-size: 26rpx;
}

.value {
  color: #222;
  font-size: 26rpx;
}

.value.status {
  color: #ff6b35;
}

.value.price {
  color: #ff6b35;
  font-weight: 800;
  font-size: 30rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 14rpx;
}

.addr-line {
  display: block;
  color: #444;
  font-size: 26rpx;
  line-height: 1.6;
}

.item {
  display: flex;
  padding: 14rpx 0;
  border-top: 1rpx solid #f1f1f1;
}

.item:first-child {
  border-top: none;
}

.cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.info {
  flex: 1;
  margin-left: 14rpx;
  min-width: 0;
}

.title {
  font-size: 28rpx;
  color: #222;
  line-height: 1.4;
}

.meta {
  margin-top: 10rpx;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.qty {
  color: #666;
  font-size: 26rpx;
}

.price {
  color: #ff6b35;
  font-size: 28rpx;
  font-weight: 700;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 18rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.06);
}

.footer-left {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.total-label {
  color: #666;
  font-size: 26rpx;
}

.total-value {
  color: #ff6b35;
  font-size: 38rpx;
  font-weight: 800;
}

.btn-pay {
  background: #ff6b35;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 46rpx;
  border-radius: 14rpx;
}
