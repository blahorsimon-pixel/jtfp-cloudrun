/* 购物车页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
  padding-bottom: 280rpx; /* 为底部结算栏和 tabBar 留出空间 */
  box-sizing: border-box;
}

/* 空购物车 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-go-home {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8a5c 100%);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 44rpx;
  font-weight: 500;
}

/* 购物车列表 */
.cart-list {
  padding-bottom: 20rpx;
}

.cart-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.item-cover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background: #f8f8f8;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.item-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-weight: 500;
}

.item-delete {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  margin-left: 10rpx;
  flex-shrink: 0;
}

.item-delete:active {
  color: #ff6b35;
}

.item-sku {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
}

.item-sku.welfare {
  color: #ff6b35;
}

.item-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
  padding-top: 16rpx;
}

.item-price {
  display: flex;
  align-items: baseline;
  color: #ff6b35;
}

.price-symbol {
  font-size: 24rpx;
  font-weight: 500;
}

.price-value {
  font-size: 36rpx;
  font-weight: 700;
}

/* 数量选择器 */
.qty-selector {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.qty-btn {
  width: 60rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
  background: #f5f5f5;
  transition: all 0.15s;
}

.qty-btn.minus {
  border-radius: 8rpx 0 0 8rpx;
}

.qty-btn.plus {
  border-radius: 0 8rpx 8rpx 0;
  background: #ff6b35;
  color: #fff;
}

.qty-btn:active {
  opacity: 0.7;
}

.qty-btn.disabled {
  color: #ccc;
  background: #f0f0f0;
}

.qty-btn.plus.disabled {
  background: #ddd;
  color: #999;
}

.qty-num {
  min-width: 60rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  font-weight: 500;
}

/* 底部结算栏 */
.checkout-bar {
  position: fixed;
  left: 0;
  right: 0;
  /* tabBar 高度120rpx + 安全区域，需要留足空间 */
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.checkout-info {
  display: flex;
  align-items: baseline;
}

.checkout-label {
  font-size: 26rpx;
  color: #666;
}

.checkout-total {
  display: flex;
  align-items: baseline;
}

.total-symbol {
  font-size: 26rpx;
  color: #ff6b35;
  font-weight: 600;
}

.total-amount {
  font-size: 42rpx;
  color: #ff6b35;
  font-weight: 700;
}

.checkout-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8a5c 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  padding: 0 50rpx;
  height: 76rpx;
  border-radius: 38rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
}

.checkout-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.checkout-count {
  font-size: 26rpx;
  margin-left: 6rpx;
  font-weight: 400;
}
