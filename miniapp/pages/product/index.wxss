.container {
  padding-bottom: 140rpx;
}

.loading,
.error {
  padding: 120rpx 20rpx;
  text-align: center;
  color: #999;
}

.btn-retry {
  margin-top: 20rpx;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  background: #ff6b35;
  color: #fff;
  border-radius: 40rpx;
}

.cover {
  width: 100%;
  height: 640rpx;
  background: #f5f5f5;
}

.card {
  margin: 20rpx 20rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.title {
  font-size: 34rpx;
  color: #222;
  line-height: 1.4;
}

.row {
  display: flex;
  align-items: center;
}

.price-row {
  margin-top: 16rpx;
  color: #ff6b35;
}

.price-symbol {
  font-size: 28rpx;
}

.price-value {
  font-size: 44rpx;
  font-weight: 700;
  margin-left: 6rpx;
}

.tag {
  margin-left: 16rpx;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

.tag-welfare {
  background: #fff3e8;
  color: #ff6b35;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 14rpx;
}

.sku-list {
  display: flex;
  flex-wrap: wrap;
}

.sku-item {
  padding: 12rpx 18rpx;
  border-radius: 999rpx;
  border: 1rpx solid #eee;
  margin-right: 14rpx;
  margin-bottom: 14rpx;
  color: #444;
  background: #fafafa;
}

.sku-item.active {
  border-color: #ff6b35;
  color: #ff6b35;
  background: #fff3e8;
}

.sku-text {
  font-size: 26rpx;
}

.qty {
  display: flex;
  align-items: center;
}

.qty-btn {
  width: 72rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 12rpx;
  background: #f2f2f2;
  color: #333;
  font-size: 32rpx;
}

.qty-value {
  width: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: #222;
}

.qty-tip {
  margin-left: 16rpx;
  color: #999;
  font-size: 24rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.7;
  white-space: pre-wrap;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 18rpx 16rpx;
  display: flex;
  gap: 12rpx;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.06);
}

.btn {
  flex: 1;
  font-size: 28rpx;
  border-radius: 14rpx;
  padding: 18rpx 0;
}

.btn-ghost {
  background: #f6f6f6;
  color: #333;
}

.btn-primary {
  background: #ff6b35;
  color: #fff;
}

.btn-buy {
  background: #1f2937;
  color: #fff;
}

.btn-disabled {
  background: #ccc !important;
  color: #999 !important;
}

/* 福利码输入区域 */
.welfare-section {
  margin-top: 20rpx;
}

.welfare-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
}

.welfare-input {
  width: 100%;
  height: 88rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  margin-top: 16rpx;
  box-sizing: border-box;
}

.welfare-result {
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
  text-align: center;
}

.welfare-ok-box {
  background: #f0f9eb;
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e1f3d8;
}

.welfare-bad-box {
  background: #fef0f0;
  color: #f56c6c;
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #fde2e2;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-weight: bold;
}

.welfare-price {
  color: #ee0a24;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.welfare-usage-hint {
  color: #e6a23c;
  font-size: 26rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.fire-icon,
.warning-icon {
  font-size: 28rpx;
}

.welfare-note-box {
  background: #333;
  color: #fff;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  display: inline-block;
  font-size: 26rpx;
  max-width: 100%;
  word-break: break-all;
}

.note-label {
  opacity: 0.8;
  margin-right: 8rpx;
}
