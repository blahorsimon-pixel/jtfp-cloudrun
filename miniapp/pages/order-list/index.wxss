.container {
  padding: 20rpx;
}

.loading,
.error {
  padding: 120rpx 0;
  text-align: center;
  color: #999;
}

.btn-retry {
  margin-top: 20rpx;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  background: #ff6b35;
  color: #fff;
  border-radius: 40rpx;
}

.empty {
  padding: 140rpx 0;
  text-align: center;
  color: #999;
}

.empty-title {
  font-size: 30rpx;
}

.order {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.order-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-no {
  font-size: 24rpx;
  color: #666;
}

.order-status {
  font-size: 24rpx;
  color: #ff6b35;
}

.order-body {
  display: flex;
  margin-top: 16rpx;
}

.cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.info {
  flex: 1;
  margin-left: 14rpx;
  min-width: 0;
}

.title {
  font-size: 28rpx;
  color: #222;
  line-height: 1.4;
}

.meta {
  margin-top: 10rpx;
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.qty {
  color: #666;
  font-size: 26rpx;
}

.price {
  color: #ff6b35;
  font-size: 28rpx;
  font-weight: 700;
}

.order-foot {
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-end;
  gap: 12rpx;
}

.btn {
  font-size: 26rpx;
  border-radius: 999rpx;
  padding: 12rpx 26rpx;
}

.btn-pay {
  background: #ff6b35;
  color: #fff;
}

.btn-ghost {
  background: #f6f6f6;
  color: #333;
}
