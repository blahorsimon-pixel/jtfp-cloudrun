.container {
  padding: 20rpx;
  padding-bottom: 140rpx;
}

.tabs {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 14rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
}

.tab.active {
  background: #fff3e8;
  color: #ff6b35;
  font-weight: 600;
}

.loading,
.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.btn-retry {
  margin-top: 20rpx;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  background: #ff6b35;
  color: #fff;
  border-radius: 40rpx;
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.product-card {
  width: 48%;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.product-image {
  width: 100%;
  height: 340rpx;
  background: #f5f5f5;
}

.product-info {
  padding: 16rpx;
}

.title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 10rpx;
}

.product-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 78rpx;
}

.badge {
  font-size: 22rpx;
  padding: 6rpx 10rpx;
  border-radius: 999rpx;
  background: #fff3e8;
  color: #ff6b35;
  white-space: nowrap;
}

.product-price {
  margin-top: 12rpx;
  color: #ff6b35;
}

.price-symbol {
  font-size: 24rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: 600;
}

.empty-state {
  width: 100%;
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}
